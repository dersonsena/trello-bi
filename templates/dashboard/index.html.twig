{% extends 'layouts/base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block content %}
    <h1 class="text-center">Seus Boards</h1>
    <hr>
    <div class="row">
    {% for board in boards %}
        <div class="col-md-3 mb-3">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-layer-group"></i> {{ board.name }}
                    </h5>
                    <a href="{{ url_for('board-cycle-time', { 'id': board.id }) }}" class="card-link">
                        Cycle Time
                    </a>
                    <a href="{{ url_for('board-task-performance', { 'id': board.id }) }}" class="card-link">
                        Task Performance
                    </a>
                </div>
                <div class="card-footer text-muted">
                    <a href="{{ board.url }}" target="_blank" class="card-link">
                        <small>Ver no Trello</small>
                    </a>
                    <p>
                        <small>Última atualização: {{ board.lastActivity }}</small>
                    </p>
                </div>
            </div>
        </div>
    {% endfor %}
    </div>
{% endblock %}
